{
  "extends": [
    "config:base"
  ],
  "assignees": ["jimmyandrade"],
  "automerge": true,
  "enabled": true,
  "labels": ["dependencies", "renovate"],
  "packageRules": [
    {
      "updateTypes": ["major"],
      "automerge": false
    },
    {
      "updateTypes": ["digest", "minor", "patch", "pin"],
      "automerge": true
    }
  ],
  "schedule": "before 3am on the first day of the month",
  "semanticCommits": true,
  "unicodeEmoji": true,
  "updateLockFiles": true
}
